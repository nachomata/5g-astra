---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="5G Astra: 404">
  <div class="flex flex-col items-center justify-center h-screen relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
    <h1 class="text-6xl font-bold text-white">404</h1>
    <p class="text-gray-400 text-lg">Page not found</p>
    <a
					href="/"
					class="mt-5 px-8 py-3 rounded-full bg-purple-500 hover:bg-purple-600 text-white font-medium transition-all transform hover:scale-105"
				>
					Go back to homepage
				</a>
  </div>
</Layout>